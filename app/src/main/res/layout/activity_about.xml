<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/graylight"
    android:orientation="vertical">
    <TextView
        android:text="A propos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#4E4E4E"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="219dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/noella" />

    <TextView
        android:text="Kafiy'a Noella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4E4E4E"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:text="Etudiante en Polytechnique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#4E4E4E"
        android:textSize="15dp"
        android:textStyle="italic"/>
    <TextView
        android:text="Génie Informatique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#4E4E4E"
        android:textSize="15dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#4E4E4E"
        android:text="Ce application a été dévéloppée en vu de répondre au problème de contrôle de frais académiques à l'université Mapon à l'aide de QrCode."
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="normal" />
    <TextView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#4E4E4E"
        android:layout_marginTop="20dp"
        android:text="Edition 2021-2022"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="normal" />


    <ImageView
        android:layout_width="248dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:src="@drawable/sdeveloppers"
        android:textColor="#4E4E4E"
        android:textSize="15dp"
        android:textStyle="normal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonstyle"
        android:onClick="home"
        android:src="@drawable/ic_baseline_home_24" />

</LinearLayout>